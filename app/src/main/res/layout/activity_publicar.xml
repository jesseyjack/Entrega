<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_publicar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jack.appfirebase.Publicar">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtProductoname"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:hint="Nombre del producto*" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/txtProductoname"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:id="@+id/txtPreciop"
        android:hint="Precio ($)*" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="19dp"
        android:id="@+id/txtNumbercontac"
        android:layout_below="@+id/txtPreciop"
        android:layout_alignParentStart="true"
        android:hint="Numero de celular a contactar*" />

    <Button
        android:text="Publicar "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="33dp"
        android:id="@+id/btnPublicarr"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="111dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_marginTop="20dp"
        android:id="@+id/txtNumberFijo"
        android:hint="Telefono fijo (opcional)"
        android:layout_below="@+id/txtNumbercontac"
        android:layout_alignParentStart="true" />
</RelativeLayout>
